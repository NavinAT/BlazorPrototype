@page "/jsinterop"
@page "/jsinterop2"

@inject IJSRuntime JsRuntime

<h3>JavaScript Interop</h3>
<hr />

<h6>JavaScript Prompt Demo</h6>

<button type="button" class="btn btn-primary" @onclick="@LaunchJsPrompt">Launch JS Prompt</button>
<hr />
<h3 id="welcome" style="color: cadetblue;font-style: italic"></h3>
<a href="callingcsmethod"><strong>Navigate to calling CSharp method from JS Page </strong></a>


@code {

    private async Task LaunchJsPrompt()
    {
        var name = await JsRuntime.InvokeAsync<string>("ShowPrompt", "What's your name ?");

        await JsRuntime.InvokeVoidAsync("DisplayWelcome", $"Hello {name}! Welcome to JSInterop Demo");
    }

}
