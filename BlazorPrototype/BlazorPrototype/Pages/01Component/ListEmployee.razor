@using BlazorPrototype.Data


    <table class="table table-striped table-borderless">
        <thead>
        <tr>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Salary</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in DataContext)
        {
            <tr>
                <td>@employee.EmployeeName</td>
                <td>@employee.Department</td>
                <td>@employee.Salary</td>
            </tr>
        }
        </tbody>
    </table>


@code {

    [Parameter]
    public List<EmployeeInformation> DataContext { get; set; }

}